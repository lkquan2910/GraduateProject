.nested-fields
  .row
    .col-5
      .form-group
        .fields
          = f.label :event_time, 'Thời gian'
          = f.text_field :event_time, class: 'form-control datepicker', disabled: @is_disabled
    .col-6
      .form-group
        .fields
          = f.label :event, 'Sự kiện'
          - if f.object.is_default
            = f.text_field :event, class: 'form-control', disabled: true
            = f.hidden_field :event
            = f.hidden_field :is_default, value: 1
          - else
            = f.text_field :event, class: 'form-control'
    - unless f.object.is_default
      .col-1
        = link_to_remove_association f do
          .form-group
            %button.btn.btn-outline-danger{type: 'button', style: 'margin-top: 31px', disabled: @is_disabled}
              %i.fas.fa-trash