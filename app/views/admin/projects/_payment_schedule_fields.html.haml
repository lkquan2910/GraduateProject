.nested-fields
  .row
    .col-5
      .form-group
        .fields
          = f.label :name, 'Tên đợt'
          = f.text_field :name, class: 'form-control'
          - f.object.errors.messages[:name].each do |name_error|
            %span.invalid-feedback.custom-validation= name_error
          = f.hidden_field :label_schedule, class: "label-schedule"
    .col-6
      .form-group
        .fields
          = f.label :pay, "Thanh toán(%)"
          = f.text_field :pay, class: 'form-control'
          - f.object.errors.messages[:pay].each do |pay_error|
            %span.invalid-feedback.custom-validation= pay_error


    .col-1
      = link_to_remove_association f do
        .form-group
          %button.btn.btn-outline-danger{type: 'button', style: 'margin-top: 31px'}
            %i.fas.fa-trash